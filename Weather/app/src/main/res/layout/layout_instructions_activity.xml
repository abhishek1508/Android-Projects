<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#263238"
    android:alpha="0.97">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@drawable/swipe_right"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView2"
        android:src="@drawable/swipe_left"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Left"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:layout_marginTop="71dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Right"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="You can swipe"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="5dp"
        android:text="OK"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        android:id="@+id/button_ok"
        android:background="@drawable/button_instruction"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="for Hourly and Daily Forecast"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/textView5"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/button_ok"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Press"
        android:id="@+id/textView6"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/button_ok"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="to Exit"
        android:id="@+id/textView7"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/button_ok"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>