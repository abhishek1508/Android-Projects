<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/daily_forecast_relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:alpha="0.7">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:id="@+id/image_description_daily_forecast"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/text_date_daily_forecast"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/image_description_daily_forecast"
            android:layout_toEndOf="@+id/image_description_daily_forecast" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/text_description_value_daily_forecast"
            android:layout_below="@+id/text_date_daily_forecast"
            android:layout_toRightOf="@+id/image_description_daily_forecast"
            android:layout_toEndOf="@+id/image_description_daily_forecast" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:id="@+id/text_value_temperature_daily_forecast"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>